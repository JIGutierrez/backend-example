{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration": false,
    "removeComments": false,
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": false,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["./src/*.ts"]
}
